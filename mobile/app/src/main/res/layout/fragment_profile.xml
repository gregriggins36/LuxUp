<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingPrefix">
    <data>
        <variable name="viewModel" type="com.frate.luxup.profile.mvvm.ProfileViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:imageUrl="@{viewModel.state.userAvatar}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_marginTop="@dimen/spacing_large"
                tools:src="@mipmap/ic_launcher_round"/>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/name_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/display_name"
                app:error="@{viewModel.state.displayNameError}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatar"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_xlarge">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:text="@={viewModel.state.displayName}"
                    android:onTextChanged="@{(text, s, b, c) -> viewModel.onNameChanged(text)}"
                    android:inputType="textCapWords"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/email_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                app:error="@{viewModel.state.emailError}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_field"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_xlarge">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:text="@={viewModel.state.email}"
                    android:onTextChanged="@{(text, s, b, c) -> viewModel.onEmailChanged(text)}"
                    android:inputType="textCapWords"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                app:error="@{viewModel.state.phoneError}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_field"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_xlarge">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:text="@={viewModel.state.phone}"
                    android:onTextChanged="@{(text, s, b, c) -> viewModel.onPhoneChanged(text)}"
                    android:inputType="textCapWords"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:textColor="@color/warning_action"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/phone_field"
                android:layout_marginTop="@dimen/spacing_xxxl"
                android:onClick="@{(view) -> viewModel.onSignOutClick()}"/>
        <include layout="@layout/toolbar_shadow"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/toolbar_shadow_height"
                 app:layout_constraintTop_toBottomOf="@id/toolbar"/>
    </android.support.constraint.ConstraintLayout>
</layout>
